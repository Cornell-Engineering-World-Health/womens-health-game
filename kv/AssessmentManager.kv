<AssessmentManager>:

    FloatLayout:
        id: assessment_grid
       
        Label:
            color: 0, 2, 3, 9
            id: name
            text: root.current_question_text
            font_size: '24sp'
        Button:
            text: "Submit"
            on_release:
                root.advance_question()
                name.text = root.current_question_text






