<DragAndDrop>:

    BoxLayout:
        orientation: 'vertical'
        id: from_box
        pos_hint: {'center_x': .1, 'center_y': .7}
        spacing: 75

        DraggableButton:
            droppable_zone_objects: [box_1]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 350, 155 
            background_color: 0, 0, 0, 0

            Image:
                source: 'assets/drag-and-drop/shape1.png'
                y: self.parent.y
                x: self.parent.x
                size: 340, 150 
                allow_stretch: False

        DraggableButton:
            droppable_zone_objects: [box_2]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 350, 155  
            background_color: 0, 0, 0, 0

            Image:
                source: 'assets/drag-and-drop/shape2.png'
                y: self.parent.y
                x: self.parent.x
                size: 340, 150 
                allow_stretch: False


        DraggableButton:
            droppable_zone_objects: [box_3]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 350, 155 
            background_color: 0, 0, 0, 0

            Image:
                source: 'assets/drag-and-drop/shape3.png'
                y: self.parent.y
                x: self.parent.x
                size: 340, 150 
                allow_stretch: False


    BoxLayout:
        id: to_box
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: 50
        size_hint_y: .8
        size_hint_x: .6 

        Label:
            id: box_1
            canvas.before:
                Color:
                    rgb: 0.647, 0.196, .137
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50,]
            pos_hint: {'center_x': .4}


        Label:
            id: box_2
            canvas.before:
                Color:
                    rgb: 0.647, 0.196, .137
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50,]
            pos_hint: {'center_x': .4}

        Label:
            id: box_3
            canvas.before:
                Color:
                    rgb: 0.647, 0.196, .137
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50,]
            pos_hint: {'center_x': .4}
