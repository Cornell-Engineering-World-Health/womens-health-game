<DragAndDrop>:

    BoxLayout:
        orientation: 'vertical'
        id: from_box
        spacing: 20

        DraggableButton:
            text: 'Button 1'
            droppable_zone_objects: [box_1]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 250, 250 

        DraggableButton:
            text: 'Button 2'
            droppable_zone_objects: [box_2]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 250, 250 

        DraggableButton:
            text: 'Button 3'
            droppable_zone_objects: [box_3]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 250, 250 

        DraggableButton:
            text: 'Button 4'
            droppable_zone_objects: [box_4]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 250, 250 

    BoxLayout:
        id: to_box
        orientation: 'vertical'
        pos_hint: {'center_x': 1}

        Label:
            id: box_1
            text: 'box 1'
            canvas.before:
                Color:
                    rgb: 0.4, 0.4, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 0.5, 0.4


        Label:
            id: box_2
            text: 'box 2'
            canvas.before:
                Color:
                    rgb: 0.4, 1, .4
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 0.5, 0.4

        Label:
            id: box_3
            text: 'box 3'
            canvas.before:
                Color:
                    rgb: 0.4, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 0.5, 0.4

        Label:
            id: box_4
            text: 'box 4'
            canvas.before:
                Color:
                    rgb: 1, 1, .4
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: 0.5, 0.4



