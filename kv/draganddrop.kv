<DragAndDrop>:

    BoxLayout:
        orientation: 'vertical'
        id: from_box
        spacing: 20

        DraggableButton:
            text: 'Button 1'
            droppable_zone_objects: [box_1]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 250, 250 

        DraggableButton:
            text: 'Button 2'
            droppable_zone_objects: [box_2]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 250, 250 

        DraggableButton:
            text: 'Button 3'
            droppable_zone_objects: [box_3]
            drop_func: root.correct
            failed_drop_func: root.wrong
            size_hint: None, None
            size: 250, 250 

    BoxLayout:
        id: to_box
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: 50
        size_hint_y: .8
        size_hint_x: .6 

        Label:
            id: box_1
            text: 'box 1'
            canvas.before:
                Color:
                    rgb: 0.647, 0.196, .137
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50,]
            pos_hint: {'center_x': .4}


        Label:
            id: box_2
            text: 'box 2'
            canvas.before:
                Color:
                    rgb: 0.647, 0.196, .137
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50,]
            pos_hint: {'center_x': .4}

        Label:
            id: box_3
            text: 'box 3'
            canvas.before:
                Color:
                    rgb: 0.647, 0.196, .137
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50,]
            pos_hint: {'center_x': .4}
