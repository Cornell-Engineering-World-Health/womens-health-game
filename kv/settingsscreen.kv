<SettingsScreen>:
    canvas:
        Color:
            rgba: 0.708, 0.281, 0.097, 1
        Rectangle:
            size: self.size
            pos: self.pos
	FloatLayout:

        MDToolbar:
            title: root.email
            md_bg_color: 1, 1, 1, 1
            specific_text_color: 0, 0, 0, 1
            left_action_items: [["arrow-left", lambda x: root.back()]]
            round: '50dp'
            pos_hint: {'y':.9}

        Label:
            text: 'SETTINGS'
            text_color: 1, 1, 1, 1
            halign: 'center'
            font_size: '50sp'
            bold: True
            pos_hint: {'x':.3, 'y':.75}
            size_hint: (.4, .05)

        RoundButton:
            text: 'Admin Website'
            color: 0,0,0,1
            font_size: '20sp'
            bold: True
            on_press: root.open_url()
            size_hint: (.2, .075)
            pos_hint: {"x": .4, "y": .5}

        RoundButton:
            text: 'Logout'
            color: 0,0,0,1
            font_size: '20sp'
            bold: True
            on_press: root.logout()
            size_hint: (.2, .075)
            pos_hint: {"x": .4, "y": .3}

        Label:
            text: root.error_message
            text_color: 1, 1, 1, 1
            halign: 'center'
            font_size: '15sp'
            pos_hint: {'x':.3, 'y':.1}
            size_hint: (.4, .05)

<RoundButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (0.925,0.786,0.27,1)
    border_radius: [50]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius
