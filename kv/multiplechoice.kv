#:import app_style util.style.app_style
<MultipleChoice>:


    canvas:
        Color:
            rgba: app_style['assessment_background']
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        size: (300, 200)
        rows: 0
        cols: 0
        orientation: "vertical"

        Image:
            id: feedback
            opacity: 0
            source: "x.png"
            pos: (700, 800)


        Button:
            id: option1
            background_color:app_style['assessment_background']
            background_normal: root.image_options[0]
            size: 300, 200
            pos: 200, 500
            on_press: root.selected.append(root.choices[0]) if root.choices[0] not in root.selected else root.selected.remove(root.choices[0])
            on_release: option1.background_color = (0, 0, 1, 1) if root.choices[0] in root.selected else app_style['assessment_background']


        Button:
            id: option2
            background_color: app_style['assessment_background']
            background_normal: root.image_options[1]
            pos: 200, 200
            size: 300, 200
            on_press: root.selected.append(root.choices[1]) if root.choices[1] not in root.selected else root.selected.remove(root.choices[1])
            on_release: option2.background_color = (0, 0, 1, 1) if root.choices[1] in root.selected else app_style['assessment_background']

        Button:
            id: option3
            background_color: app_style['assessment_background']
            background_normal: root.image_options[2]
            pos: 1000, 500
            size: 300, 200
            on_press:
                root.selected.append(root.choices[2]) if root.choices[2] not in root.selected else root.selected.remove(root.choices[2])
   
            on_release: option3.background_color = (0, 0, 1, 1) if root.choices[2] in root.selected else app_style['assessment_background']

        Button:
            id: option4
            background_color: app_style['assessment_background']
            background_normal: root.image_options[3]
            pos: 1000, 200
            size: 300, 200
            on_press: root.selected.append(root.choices[3]) if root.choices[3] not in root.selected else root.selected.remove(root.choices[3])
            on_release: option4.background_color = (0, 0, 1, 1) if root.choices[3] in root.selected else app_style['assessment_background']

        Button:
            id: submit
            pos: 600, 50
            size: 300, 200
            background_normal: 'assets/next-arrow.png'
            on_release:
                root.verify()


