#:include kv/loginscreen.kv
#:include kv/dashboard.kv
#:include kv/module.kv
#:include kv/settingsscreen.kv
#:include kv/AssessmentManager.kv

NavigationLayout:
    id: nav_layout

    ScreenManager:
    
        Screen:

            BoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    title: app.title
                    elevation: 10
                    right_action_items: [['settings', lambda x: app.settings()]]

                ScreenManager:
                    id: screen_manager

                    LoginScreen
                        id: login_screen
                        name: "login_screen"

                    Dashboard:
                        id: dashboard
                        name: "dashboard"

                    Module:
                        id: module
                        name: "module"

                    AssessmentManager:
                        id: assessment_manager
                        name: "assessment_manager"

                    SettingsScreen:
                        id: settings_screen
                        name: "settings_screen"

        
